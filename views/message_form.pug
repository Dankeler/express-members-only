extends layout

block content
    if currentUser
        h1 Create Message

        form(method="POST")
            div.form-group
                label(for="title") Title:
                input#title.form-control(type="text", name="title", required)
            div.form-group
                label(for="message") Message:
                textarea#message.form-control(name="message", rows="4", required)
            button.btn.btn-primary(type="submit") Submit
    else 
        h1 
            a(href="/log-in") Log in first
